{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["es2020", "ES2021.String"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "rootDirs": ["./test"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"],
  "include": ["./test", "./types"]
}
